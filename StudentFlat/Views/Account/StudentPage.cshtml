@{
    var student = ViewData["Student"] as Student;
    var flat = ViewData["Flat"] as Flat;
}
@{
    <h1 class="display-4 mt-4">Твоя сторінка:</h1>
    <div class="row mt-5 mb-2">
        <div style="margin-top: 20px" class="col-lg-5 card border-info mb-3 mr-3">
            <div class="card-body">
                <h2>@student.name</h2>
                <hr>
                <p>Телефон: @student.phone </p>
                <p>Email: @student.email</p>
            </div>
        </div>
        <div class="col-lg-6 card border-info mb-3 mr-3">
            <h2>Твоя квартира:</h2>
            <hr>
            @if (student.isSearching)
            {
                <p>У вас, поки що немає квартири, проте ви можете пошукати її тут:</p>
                <a class="btn btn-outline-primary" asp-controller="Flats" asp-action="Flats">Переглянути квартири</a>
            }
            else
            {
                <div class="col-lg-6">
                    <img class="img-thumbnail" src="@Url.Content(flat.img)" alt="@flat.name"/>
                    <h3>@flat.name</h3>
                    <p>Ціна: @flat.price.ToString("F2")₴</p>
                    <p>@flat.shortDesc</p>
                    <p><a class="btn btn-outline-primary" asp-controller="Flats" asp-action="GetFlat" asp-route-flatId="@flat.id">Деталі</a></p>
                </div>
            }
        </div>
    </div>
}
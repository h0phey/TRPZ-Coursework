@model StudentFlat.ViewModels.RegisterModel

<h1 class="display-4 mt-4">Реєстрація</h1>

<div class="row mt-4 mb-2">
    <div class="col-lg-6 align-content-center">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="btn-group" id="options" data-toggle="buttons">
                    <label class="btn btn-outline-secondary">
                        <input type="radio" asp-for="Role" value="False">  Студент
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" asp-for="Role" value="True">  Власник
                    </label>
                    <span style="font-style:italic" asp-validation-for="Role" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Введіть Email:</label>
                    <input type="email" asp-for="Email" />
                    <span style="font-style:italic" asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Введіть ім'я:</label>
                    <input asp-for="Name" />
                    <span style="font-style:italic" asp-validation-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Введіть номер телефону:</label>
                    <input asp-for="Phone" />
                    <span style="font-style:italic" asp-validation-for="Phone" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введіть пароль:</label>
                    <input asp-for="Password" />
                    <span style="font-style:italic" asp-validation-for="Password" />
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Повторіть пароль:</label>
                    <input asp-for="ConfirmPassword" />
                    <span style="font-style:italic" asp-validation-for="ConfirmPassword" />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Реєстрація" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-6 align-content-center">
        <h2>Вже зареєстровані?</h2>
        <hr />
        <a asp-action="Login" asp-controller="Account">Вхід</a>
    </div>
</div>